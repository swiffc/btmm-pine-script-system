{
  // Pine Script specific settings
  "files.associations": {
    "*.pine": "pinescript",
    "*.psc": "pinescript",
    "BTMM*.pine": "pinescript",
    "BTMMFoundation.pine": "pinescript"
  },
  
  // Pine Script language configuration
  "pinescript.version": "v5",
  "pinescript.enabled": true,
  "pinescript.autocomplete": true,
  "pinescript.syntax": true,
  
  // Language mode detection
  "[pinescript]": {
    "editor.defaultFormatter": null,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",
    "editor.autoIndent": "advanced"
  },
  
  // Editor settings optimized for Pine Script
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.rulers": [80, 120],
  
  // Cursor AI settings
  "cursor.ai.enabled": true,
  "cursor.ai.model": "gpt-4",
  
  // File explorer settings
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.pine": "${capture}.md"
  },
  
  // Auto-save for Pine Script development
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  // Git integration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  "pine.autoIntegration": true,
  "pine.dependencyTracking": true,
  "pine.preventBreakingChanges": true,
  
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/backups/**": true,
    "**/*.blocked": true
  },
  
  "pine.btmm.autoCheck": {
    "enabled": true,
    "checkOnSave": true,
    "updateDependencies": true,
    "validateIntegrations": true,
    "enforceScriptLimit": true
  },
  
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/backups": true,
    "**/.git": true
  },
  
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },

  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.pine": "$(capture).blocked",
    "package.json": "package-lock.json,yarn.lock",
    ".cursor-rules.js": ".cursor/**",
    "README.md": "*.md"
  },

  "btmm.scriptLimit": {
    "enabled": true,
    "maxScripts": 10,
    "blockCreation": true,
    "autoSuggestMerge": true,
    "monitorFileSystem": true
  },

  "btmm.integrationChecks": {
    "validateOnSave": true,
    "checkDataWindowOutputs": true,
    "checkInputSources": true,
    "preventBreakingChanges": true
  },

  "emmet.includeLanguages": {
    "pinescript": "javascript"
  },

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  },

  "workbench.colorCustomizations": {
    "statusBar.background": "#1a472a",
    "statusBar.foreground": "#ffffff",
    "statusBarItem.hoverBackground": "#2d6a3e",
    "activityBar.background": "#0d1117",
    "sideBar.background": "#161b22"
  },

  "workbench.colorTheme": "Default Dark+",
  
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showSymbols": true
} 