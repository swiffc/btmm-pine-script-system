{
  // Pine Script specific settings
  "files.associations": {
    "*.pine": "pinescript",
    "*.psc": "pinescript",
    "BTMM*.pine": "pinescript",
    "BTMMFoundation.pine": "pinescript",
    "**/scripts/**/*.pine": "pinescript",
    "**/btmm*.pine": "pinescript"
  },

  // Pine Script language configuration
  "pinescript.version": "v5",
  "pinescript.enabled": true,
  "pinescript.autocomplete": true,
  "pinescript.syntax": true,

  // Language mode detection
  "[pinescript]": {
    "editor.defaultFormatter": null,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.autoIndent": "full",
    "editor.suggestSelection": "first",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": true
  },

  // Editor settings optimized for Pine Script
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.lineNumbers": "on",
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,

  // Cursor AI settings
  "cursor.ai.enabled": true,
  "cursor.ai.model": "claude-3.5-sonnet",
  "cursor.ai.contextLength": 16000,
  "cursor.indexing.enabled": true,
  "cursor.ai.useCodebaseContext": true,
  "cursor.ai.enableRulesSuggestions": true,

  // File explorer settings
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.pine": "${capture}.md"
  },

  // Auto-save for Pine Script development
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // Git integration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  "pine.autoIntegration": true,
  "pine.dependencyTracking": true,
  "pine.preventBreakingChanges": true,

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/*.blocked": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },

  "pine.btmm.autoCheck": {
    "enabled": true,
    "checkOnSave": true,
    "updateDependencies": true,
    "validateIntegrations": true,
    "enforceScriptLimit": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true
  },

  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.pine": "$(capture).blocked",
    "package.json": "package-lock.json,yarn.lock",
    ".cursor-rules.js": ".cursor/**",
    "README.md": "*.md"
  },

  "btmm.scriptLimit": {
    "enabled": true,
    "maxScripts": 10,
    "blockCreation": true,
    "autoSuggestMerge": true,
    "monitorFileSystem": true
  },

  "btmm.integrationChecks": {
    "validateOnSave": true,
    "checkDataWindowOutputs": true,
    "checkInputSources": true,
    "preventBreakingChanges": true
  },

  "emmet.includeLanguages": {
    "pinescript": "javascript"
  },

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  },

  "workbench.colorCustomizations": {
    "statusBar.background": "#1a472a",
    "statusBar.foreground": "#ffffff",
    "statusBarItem.hoverBackground": "#2d6a3e",
    "activityBar.background": "#0d1117",
    "sideBar.background": "#161b22"
  },

  "workbench.colorTheme": "Default Dark+",

  "git.ignoreLimitWarning": true,
  "git.autofetch": true,

  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showSymbols": true,

  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true
  },

  "extensions.ignoreRecommendations": false,

  "cursor.rules.enabled": true,
  "cursor.rules.directory": ".cursor/rules",
  "cursor.rules.autoApply": true,
  "cursor.rules.validateOnSave": true,

  "cursor.ai.chat.enableContext": true,
  "cursor.ai.chat.maxTokens": 16000,
  "cursor.ai.suggestions.enabled": true,
  "cursor.ai.suggestions.delay": 100,

  "btmm.mergeOnlyMode": true,
  "btmm.validateIntegration": true,
  "btmm.autoBackup": true,
  "editor.parameterHints.enabled": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "top",

  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  "debug.allowBreakpointsEverywhere": true,
  "debug.openDebug": "openOnDebugBreak",

  "terminal.integrated.env.windows": {
    "BTMM_PROJECT_ROOT": "${workspaceFolder}",
    "BTMM_SCRIPT_LIMIT": "10"
  },

  "pinescript.languageServer.enabled": true,
  "pinescript.validation.enabled": true,
  "pinescript.completion.enabled": true,
  "pinescript.hover.enabled": true,
  "pinescript.signature.enabled": true,

  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": false,

  "workbench.experimental.cloudChanges": false,
  "editor.experimental.asyncTokenization": true,

  "typescript.validate.enable": false,
  "javascript.validate.enable": false,

  "pinescript.snippets.enabled": true,
  "pinescript.snippets.path": ".vscode/snippets",

  "btmm.foundation.autoImport": true,
  "btmm.dataWindow.validate": true,
  "btmm.crossScript.monitor": true,
  "btmm.performance.track": true,

  "btmm.quality.enforceStandards": true,
  "btmm.quality.antiRepainting": true,
  "btmm.quality.performanceCheck": true,
  "btmm.quality.integrationTest": true
}
