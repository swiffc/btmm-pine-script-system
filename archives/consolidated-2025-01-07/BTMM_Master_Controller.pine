    label.new(bar_index + 3, ema_13, "ðŸ”´ Ketchup", style=label.style_label_left, color=color.red, textcolor=color.white, size=label_size)
    label.new(bar_index + 3, ema_50, "ðŸ’§ Water", style=label.style_label_left, color=color.aqua, textcolor=color.black, size=label_size)
