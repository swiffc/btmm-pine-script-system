// M Pattern Strength
m_pattern_strength() =>
    if not m_completed
        "NONE"
    else
        strength_score = 0
        
        // Volume confirmation
        if volume > volume_spike_threshold
            strength_score += 2
        
        // Pattern symmetry
        if not na(m_peak1) and not na(m_peak2)
            symmetry = math.abs(m_peak1 - m_peak2) / math.max(m_peak1, m_peak2)
            if symmetry < 0.005
                strength_score += 2
            else if symmetry < 0.01
                strength_score += 1
        
        // Context bonus
        if m_type == "TYPE_1_RESISTANCE"
            strength_score += 1
        
        if strength_score >= 4
            "ULTIMATE"
        else if strength_score >= 3
            "STRONG"
        else if strength_score >= 2
            "MODERATE"
        else
            "WEAK"

// W Pattern Strength
w_pattern_strength() =>
    if not w_completed
        "NONE"
    else
        strength_score = 0
        
        // Volume confirmation
        if volume > volume_spike_threshold
            strength_score += 2
        
        // Pattern symmetry
        if not na(w_valley1) and not na(w_valley2)
            symmetry = math.abs(w_valley1 - w_valley2) / math.max(w_valley1, w_valley2)
            if symmetry < 0.005
                strength_score += 2
            else if symmetry < 0.01
                strength_score += 1
        
        // Context bonus
        if w_type == "TYPE_1_SUPPORT"
            strength_score += 1
        
        if strength_score >= 4
            "ULTIMATE"
        else if strength_score >= 3
            "STRONG"
        else if strength_score >= 2
            "MODERATE"
        else
            "WEAK"

