// ============================================================================

alertcondition(leg2_bull_confirmed, "Second Leg Bullish", "ðŸš€ SECOND LEG BULLISH CONFIRMED - Continuation Trade Setup")
alertcondition(leg2_bear_confirmed, "Second Leg Bearish", "ðŸ”» SECOND LEG BEARISH CONFIRMED - Continuation Trade Setup")
alertcondition(pullback_done and active_session, "Pullback Complete", "âš ï¸ PULLBACK COMPLETE in ACTIVE SESSION - Watch for Second Leg")

