plot(ema_200, "EMA_200_Mayo", display=display.data_window)
plot(ema_800, "EMA_800_Blueberry", display=display.data_window)

// System status
plot(is_15m_or_higher ? 1 : 0, "Valid_Timeframe", display=display.data_window)